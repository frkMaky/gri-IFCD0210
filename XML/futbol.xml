        <nombre>RC Celta</nombre>
        <ciudad>Vigo</ciudad>
        <entrenador />
        <jugadores>
            <jugador posicion="delantero">
                <nombre>Iago Aspas</nombre>
                <nacionalidad>Española</nacionalidad>
            </jugador>
            
            <jugador posicion="portero">
                <nombre>Yago Nuñez Lopez</nombre>
